<h1>Categories</h1>

<ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category) %>
      <%= link_to "delete", category_path(category), :data => {:method => :delete} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a category", new_category_path %>


